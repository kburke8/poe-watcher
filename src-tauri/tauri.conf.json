{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "POE Watcher",
  "version": "0.3.1",
  "identifier": "com.poe-watcher.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "POE Watcher - Speedrun Tracker",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://web.poecdn.com; connect-src ipc: http://ipc.localhost https://www.pathofexile.com https://pobb.in https://github.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY4MjdFRTBEQzkxMzU4ODIKUldTQ1dCUEpEZTRuK01rTkluUWFJcWgxbEhHZVhlSHZFSDZFLzRoTW5UclBsdjBRdFVUa21qcEcK",
      "endpoints": [
        "https://github.com/kburke8/poe-watcher/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
